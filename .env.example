# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Site URL (for email redirects)
# ローカル開発: http://localhost:3000
# 本番環境: あなたのVercel URL（例: https://your-app.vercel.app）
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Teacher Registration Key
# 講師アカウント作成時に必要な認証キー（本番環境では必ず変更してください）
TEACHER_REGISTRATION_KEY=your-secret-teacher-key

# LINE Login Configuration (Optional)
# LINE Developersで取得したChannel IDとChannel Secret
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret

# ElevenLabs TTS Configuration (Optional)
# リスニング問題の音声生成に使用
# https://elevenlabs.io/ でAPIキーを取得
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Daily News Generator (OpenAI for both script generation and TTS)
OPENAI_API_KEY=your-openai-api-key

# Vercel Cron Secret (for securing cron endpoints)
CRON_SECRET=your-cron-secret

# Stripe Configuration (for Roopy English subscription)
# https://dashboard.stripe.com/apikeys で取得
STRIPE_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (Stripeダッシュボードで商品・価格を作成後に設定)
STRIPE_PRICE_MONTHLY=price_xxxxx
STRIPE_PRICE_YEARLY=price_xxxxx

# App URL (for Stripe redirect)
NEXT_PUBLIC_APP_URL=http://localhost:3000
